{
  "name": "@trutohq/querybird",
  "version": "1.0.25",
  "description": "QueryBird - Containerized job scheduler for database queries with Docker-first deployment",
  "main": "dist/main-runner.js",
  "type": "module",
  "bin": {
    "querybird": "./bin/querybird.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "install/**/*"
  ],
  "scripts": {
    "dev": "bun run src/main-runner.ts start --log-level debug",
    "dev:watch": "bun --hot src/main-runner.ts start --log-level debug",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up --build",
    "dev:docker:logs": "docker-compose -f docker-compose.dev.yml logs -f querybird-dev",
    "build": "bun build src/main-runner.ts --outdir dist --target bun --minify",
    "docker:build": "docker build -t querybird:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t querybird:dev .",
    "docker:run": "docker run --rm -it -v ~/.querybird:/app/.querybird querybird:latest",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f querybird",
    "docker:cli": "docker-compose run --rm querybird-cli",
    "secrets:wizard": "bun run src/utils/secrets-collector.ts wizard",
    "secrets:interactive": "bun run src/utils/secrets-collector.ts interactive",
    "secrets:database": "bun run src/utils/secrets-collector.ts database",
    "secrets:api-keys": "bun run src/utils/secrets-collector.ts api-keys",
    "secrets:webhooks": "bun run src/utils/secrets-collector.ts webhooks",
    "secrets:list": "bun run src/utils/secrets-collector.ts list",
    "test": "bun test src/**/*.test.ts",
    "lint": "bun run --bun tsc --noEmit --project .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "clean:docker": "docker-compose down -v && docker system prune -f"
  },
  "keywords": [
    "docker",
    "container",
    "database",
    "query",
    "scheduler",
    "postgres",
    "mysql",
    "cron",
    "automation",
    "job-scheduler",
    "webhook",
    "bun",
    "typescript",
    "containerized",
    "docker-compose",
    "secrets-management",
    "config-watcher"
  ],
  "author": "QueryBird",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/lodash": "4.17.20",
    "@types/node": "20.0.0",
    "@types/pg": "8.15.5",
    "@types/yaml": "1.9.7",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "typescript": "5"
  },
  "dependencies": {
    "@truto/truto-jsonata": "1.0.49",
    "commander": "12.0.0",
    "croner": "9.1.0",
    "lodash": "4.17.21",
    "mysql2": "3.14.3",
    "pg": "8.16.3",
    "yaml": "2.8.1",
    "zod": "3.22.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}